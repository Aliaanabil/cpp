#include <iostream>

using namespace std;

int main()
{

    int arr[10];

    int evencount=0,oddcount=0;
    for (int i=0;i<10;i++)
    {
        cin >> arr[i];
        if (arr[i] %2 ==0){
                evencount++;

        }
        else
        {
            oddcount++;

        }
        }
         cout << "even numbers are"<< evencount<< endl;
          cout << "odd numbers are"<< oddcount<< endl;


    return 0;
}
